
{
  "compilerOptions": {
    "outDir": "public",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es5",
    "typeRoots": [ "node_modules/@types", "typings" ],
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "esnext.asynciterable",
      "es2017.object"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/server/*", "src/client/*"],
      "server/*": ["src/server/*"],
      "client/*": ["src/client/*"],
      "shared/*": ["src/shared/*"],
      "settings": ["settings.js", "settings.public.js"],
      "models/*": ["src/server/models/*"]
    }
  },
  "include": [
    "scripts/**/*",
    "src/**/*",
    "node_modules/@types",
    "typings/*.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules/typescript/lib/lib.es2015.promise.d.ts"
  ]
}
